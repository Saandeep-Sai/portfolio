  },
  "devDependencies": {
    "@types/css-modules": "^1.0.5",
    "@types/next": "^8.0.7",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "eslint": "^8",
    "eslint-config-next": "^15.0.0",
    "typescript": "^5",
    "concurrently": "^8.2.2"
